<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtFullName"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Diego Franco"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/txtItemPhone"
        android:layout_width="146dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/txtItemEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtFullName"
        app:layout_constraintTop_toBottomOf="@+id/txtFullName" />

    <TextView
        android:id="@+id/txtItemEmail"
        android:layout_width="161dp"
        android:layout_height="30dp"
        android:text="TextView"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txtFullName"
        app:layout_constraintTop_toTopOf="@+id/txtItemPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>